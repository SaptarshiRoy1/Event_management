<body>

  <div class="heading"><h1 >EVENTS</h1></div>

  <div class="container2">

      <% user1.events.forEach(function(event){%>

        <div class="details">
          <h1 class='title'><%= event.eventname%></h1>
          <h3 class='date'><%= event.date%></h3>
          <h2 class='venue'><%= event.location%></h2>
          <h4 class='description'><%= event.description%></h4>
          <button class="deleteButton">Delete</button>
        </div>
        
        <%  })%>

    </div>

    <!-- Script for deleting -->
        <script>

const deleteButtons = document.querySelectorAll('.deleteButton');
          deleteButtons.forEach(deleteButton => {
  deleteButton.addEventListener('click', function() {
   
    const userContainer = this.parentElement;

    userContainer.remove();
  });
});

        </script>
</body>

</html>